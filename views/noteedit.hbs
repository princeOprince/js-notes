<form action="/notes/save" method="post">
    <input type="hidden" name="docreate" 
        value="<%= docreate ? 'create' : 'update' %>">
    <p>
        Key:
        {{#if docreate }}
            <input type="text" name="notekey" value="">
        {{else}}
            {{#if note }}{{notekey}}{{/if }}
            <input type="hidden" name="notekey" 
                value="{{#if note }}{{notekey}}{{/if }}">
        {{/if }}
    </p>
    <p>
        Title: 
        <input type="text" name="title"
            value="{{#if note }}{{note.title}}{{/if }}">
    </p>
    <br>
    <textarea name="body" cols="40" rows="5">{{#if note }}{{note.body}}{{/if }}</textarea>
    <br>
    <input type="submit" value="Submit">
</form>